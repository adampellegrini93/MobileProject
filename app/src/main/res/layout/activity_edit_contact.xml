<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditContact">


    <Button
        android:id="@+id/contactBack"
        android:background="@drawable/buttonstyle"
        android:text="Contacts List"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/contactBack"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:src="@drawable/upload_image_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="196dp">

        <TableRow
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/contactNameView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Name: "
                android:fontFamily="@font/amaranth"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/contactNameView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Name of Contact"
                android:fontFamily="@font/amaranth"/>
        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/contactNumberView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Mobile Number: "
                android:fontFamily="@font/amaranth"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/contactNumberView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Number"
                android:fontFamily="@font/amaranth"/>
        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/contactLocationView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Location: "
                android:fontFamily="@font/amaranth"
                android:textSize="15sp"/>

        </TableRow>




    </TableLayout>

</RelativeLayout>