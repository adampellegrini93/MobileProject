<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/face"
    android:alpha="0.6"
    tools:context=".AddContact">


    <ImageButton
        android:layout_width="165dp"
        android:layout_height="154dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="94dp"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/add_contact_image" />


    <EditText
        android:id="@+id/getContactName"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="355dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        android:fontFamily="@font/amaranth"
        android:hint="Please Enter Contact Name"
        android:inputType="textPersonName"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/getContactNumber"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="292dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_call_black_24dp"
        android:fontFamily="@font/amaranth"
        android:hint="Please Enter Phone Number"
        android:inputType="number"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:textSize="14sp" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="239dp"
        android:layout_height="165dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="117dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/createContactButton"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:background="@drawable/buttonstyle"
        android:drawableRight="@drawable/ic_add_black_24dp"
        android:padding="12dp"
        android:text="Add Contact"
        android:textColor="#ffff" />


</RelativeLayout>







