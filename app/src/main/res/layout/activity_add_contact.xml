<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddContact">

    <ImageView
        android:id="@+id/addBackground"
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:layout_above="@+id/calendarView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:contentDescription="TODO"
        android:src="@drawable/friends" />

    <ImageButton
        android:id="@+id/uploadContactImage"
        android:layout_width="92dp"
        android:layout_height="81dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/add_contact_image" />

    <View
        android:id="@+id/createAccountFill"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:alpha="0.6"
        android:background="@drawable/gradient_color"
        android:visibility="visible" />


    <EditText
        android:id="@+id/getContactName"
        android:layout_width="294dp"
        android:layout_height="51dp"
        android:layout_alignStart="@+id/getContactNumber"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="271dp"
        android:background="@drawable/edittext"
        android:drawableLeft="@drawable/ic_person_outline_white_24dp"
        android:fontFamily="@font/amaranth"
        android:hint="   Enter Contact Name"
        android:inputType="textPersonName"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/nameMic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="290dp"
        android:layout_toEndOf="@+id/mapView"
        android:background="@drawable/ic_mic_black_24dp" />


    <EditText
        android:id="@+id/getContactNumber"
        android:layout_width="294dp"
        android:layout_height="49dp"
        android:layout_alignStart="@+id/createContactButton"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-17dp"
        android:layout_marginBottom="203dp"
        android:background="@drawable/edittext"
        android:drawableLeft="@drawable/ic_phone_white_24dp"
        android:fontFamily="@font/amaranth"
        android:hint="   Enter Contact Number"
        android:inputType="phone"
        android:textColor="#FFF"
        android:textColorHint="#FFF"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/numberMic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="215dp"
        android:layout_toEndOf="@+id/getContactNumber"
        android:background="@drawable/ic_mic_black_24dp" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="288dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="66dp"
        android:apiKey=""
        android:clickable="true"
        android:enabled="true" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/createContactButton"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:background="@drawable/buttonstyle"
        android:drawableRight="@drawable/ic_add_black_24dp"
        android:padding="12dp"
        android:text="Add Contact"
        android:textColor="#ffff" />

</RelativeLayout>







